<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%level: %date{dd MMM yyyy HH:mm:ss.SSS} %logger:%line - %msg%n</pattern>
    </encoder>
  </appender>

<!--
	<logger name="us.myfamily.example.servlet" level="DEBUG"/>
-->

  <root level="WARN">
    <appender-ref ref="stdout"/>
  </root>
</configuration>
